{% extends '@layout/default.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block content %}
    <div class="page">
        <div class="page-header">
            <p class="page-meta">
                <span class="page-date">{{ post.date|date('F j, Y') }}</span>
                <a class="page-author" href="#">By {{ post.author }}</a>
            </p>
            <h1 class="page-title title">{{ post.title }}</h1>
            <p class="page-summary">{{ post.summary }}</p>
        </div>
        <div class="page-body mt-4">{{ post.body|markdown_to_html }}</div>
    </div>
{% endblock %}
